<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ItemTextBlockBase" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource PrimaryForegroundBrush}"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <!--<Setter Property="TextWrapping" Value="WrapWholeWords"/>-->
        <Setter Property="TextTrimming" Value="WordEllipsis"/>
    </Style>
    <Style x:Key="TitleItemTextBlock" TargetType="TextBlock" BasedOn="{StaticResource ItemTextBlockBase}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style x:Key="SubtitleItemTextBlock" TargetType="TextBlock" BasedOn="{StaticResource ItemTextBlockBase}">
        <Setter Property="FontSize" Value="14"/>
    </Style>
    <Style x:Key="CaptionItemTextBlock" TargetType="TextBlock" BasedOn="{StaticResource ItemTextBlockBase}">
        <Setter Property="FontSize" Value="12"/>
    </Style>
</ResourceDictionary>
